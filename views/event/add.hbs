<form method="post" action="/event/add">
    <input type="hidden" value="{{event_group_id}}" name="eventGroupId"/>

    <div class="form-group">
        <label for="eventGroupName">Etkinlik Grubu</label>
        <input required id="eventGroupName" type="text" class="form-control" disabled value="{{eventGroup.event_name}}"/>
    </div>

    <div class="form-group">
        <label for="placeId">Mekan</label>
        <select required class="form-control select2" name="placeId" id="placeId">
            {{#each places}}
                <option value="{{this.id}}">{{this.place_name}}</option>
            {{/each}}
        </select>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="startDate">Başlangıç Tarihi</label>
                <input required autocomplete="off" type="datetime-local" class="form-control" id="startDate" name="startDate">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="endDate">Bitiş Tarihi</label>
                <input required autocomplete="off" type="datetime-local" class="form-control" id="endDate" name="endDate">
            </div>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Ekle</button>
</form>