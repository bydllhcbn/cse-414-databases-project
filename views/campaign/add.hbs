<form method="post" action="/campaign/add">
     <div class="form-group">
        <label for="title">Kampanya Başlığı</label>
        <input required value="" autocomplete="off" type="text" class="form-control" id="title"
               name="title">
    </div>
    <div class="form-group">
        <label for="discount">İndirim Miktarı (Yüzde)</label>
        <input value="1" required autocomplete="off" type="number" min="1" max="100" class="form-control" id="discount"
               name="discount">
    </div>
    <div class="form-group">
        <label for="category">Etkinlik Kategorisi</label>
        <select class="form-control select2" name="category" id="category">
            <option value="0">Hepsi</option>
            {{#each categories}}
                <option value="{{this.id}}">{{this.category_name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="eventGroup">Etkinlik Grubu</label>
        <select class="form-control select2" name="eventGroup" id="eventGroup">
            <option value="0">Hepsi</option>
            {{#each eventGroups}}
                <option value="{{this.id}}">{{this.event_name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="place">Mekan</label>
        <select class="form-control select2" name="place" id="place">
            <option value="0">Hepsi</option>
            {{#each places}}
                <option value="{{this.id}}">{{this.place_name}}</option>
            {{/each}}
        </select>
    </div>


    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="startDate">Başlangıç Tarihi</label>
                <input required autocomplete="off" type="datetime-local" class="form-control" id="startDate" name="startDate">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="endDate">Bitiş Tarihi</label>
                <input required autocomplete="off" type="datetime-local" class="form-control" id="endDate" name="endDate">
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>